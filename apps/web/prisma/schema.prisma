//â€œReferential integrity is a property of a data set that states that all its references are valid. Referential integrity requires that if one record references another, then the referenced record must exist.
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url = env("DATABASE_URL")
  relationMode = "prisma"
}

model Restaurant {
id Int   @default(autoincrement()) @id
place_id String @unique
name    String
address String
google_map_url String?
lat Float?
lng Float?
visits Visit[]
reminders Reminder[]
createdAt DateTime @default(now())
updatedAt DateTime @updatedAt
}

model Visit {
id Int   @default(autoincrement()) @id
dateVisited DateTime
createdAt DateTime @default(now())
updatedAt DateTime @updatedAt
restaurant Restaurant @relation(fields: [restaurantId], references: [id])
restaurantId Int

@@index([restaurantId])
}

model Reminder {
id Int   @default(autoincrement()) @id
remindAt DateTime
daysInFuture Int @default(30)
createdAt DateTime @default(now())
updatedAt DateTime @updatedAt
restaurant Restaurant @relation(fields: [restaurantId], references: [id])
restaurantId Int

@@index([restaurantId])
}
